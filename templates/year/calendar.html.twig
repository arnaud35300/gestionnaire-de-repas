{% extends "base.html.twig" %}

{% block body %}
	<main class="flex flex-col">

		<div class="font-title text-3xl text-gray-700 font-bold text-center my-5 ">Years</div>

        {# separator #}
        <div class="flex justify-center">
            <div class="h-1 bg-blue-400 w-4/5"></div>
        </div>

		{% for year in years %}
			<div class="">
				<p class="my-4 text-center text-black text-xl underline">
                <a href="{{ path('year', {'name': year.name} ) }}" alt="year">{{ year.name }}</a>
                </p>
			</div>
		{% endfor %}
	</main>
{% endblock %}
