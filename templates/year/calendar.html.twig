{% extends "base.html.twig" %}

{% block body %}
	<main class="flex flex-col">

		<div class="font-title text-3xl text-gray-700 font-bold text-center my-5 ">Years</div>

        {# separator #}
        <div class="flex justify-center">
            <div class="h-1 bg-gray-800 w-4/5"></div>
        </div>

        <div class= "flex flex-row p-4 w-full flex-wrap justify-center items-align"> 
		
        {% for year in years %}
			<div class="bg-blue-300 m-3 rounded-md w-full lg:w-1/3 hover:bg-blue-600 text-center">
                <a class="block py-8 h-full w-full text-white text-2xl hover:underline" href="{{ path('year', {'name': year.name} ) }}" alt="year">{{ year.name }}</a>
			</div>
		{% endfor %}
        
        </div>
	</main>
{% endblock %}
