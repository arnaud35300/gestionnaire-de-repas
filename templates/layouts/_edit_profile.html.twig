

	<div class="flex w-full p-4 justify-center md:items-center md:w-2/4">

		<div class="md:rounded-lg md:shadow-lg px-4 w-full md:3/4 max-w-xl">
			<p class="font-bold text-3xl">Edit your profile</p>

			<p class="" href="{{ path('forgot_password_request') }}">Back to your 
				<a class="text-blue-400" href="{{ path('login') }}">profile</a>
			</p>

			{# !form #}
			{{ form_start(form) }}

			<div class="flex flex-col my-4">
				{{ form_label(form.name, 'Firstname', { 'label_attr': {'class': ''}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500'}}) }}

				{% if form_errors(form.name) is not same as('') %}
					<div class="alert alert-danger mx-1">{{ form_errors(form.name) }}</div>
				{% endif %}
			</div>

			<div class="flex flex-col my-4">
				{{ form_label(form.image, 'Profile Picture', { 'label_attr': {'class': ''}}) }}
				{{ form_widget(form.image, {'attr': {'class': 'form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500'}}) }}

				{% if form_errors(form.image) is not same as('') %}
					<div class="alert alert-danger mx-1">{{ form_errors(form.email) }}</div>
				{% endif %}
			</div>

			<div class="flex justify-end w-full">
				<button class="btn hover:btn my-3" type="submit">
					Update informations
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
