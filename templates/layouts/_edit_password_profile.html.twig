<div class="flex w-full p-4 justify-center lg:items-center ">

	<div class="md:rounded-lg md:shadow-lg px-4 w-full md:3/4 max-w-xl">
		<p class="font-bold text-3xl text-center">Change your password</p>

		<p class="" href="{{ path('forgot_password_request') }}">Back to your
			<a class="text-blue-400" href="{{ path('user_profile') }}">profile</a>
		</p>
		<p class="" href="{{ path('forgot_password_request') }}">Forgot
			<a class="text-blue-400" href="{{ path('user_profile') }}">password</a>?
		</p>

		{# !form #}
		{{ form_start(form) }}

		{# <div class="flex flex-col my-4">
					<label for="inputPassword">Current password</label>
					<input type="password" name="password" id="inputPassword" class="form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500" required>
				</div> #}

		<div class="flex flex-col my-4">
			{{ form_label(form.password, 'Current password', { 'label_attr': {'class': ''}}) }}
			{{ form_widget(form.password, {'attr': {'class': 'form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500'}}) }}

			{% if form_errors(form.password) is not same as('') %}
				<div class="alert alert-danger mx-1">{{ form_errors(form.password) }}</div>
			{% endif %}
		</div>

		<div class="flex flex-col my-4">
			{{ form_label(form.plainPassword.first, 'New password', { 'label_attr': {'class': ''}}) }}
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500'}}) }}

			{% if form_errors(form.plainPassword.first) is not same as('') %}
				<div class="alert alert-danger mx-1">{{ form_errors(form.plainPassword.first) }}</div>
			{% endif %}
		</div>

		<div class="flex flex-col my-4">
			{{ form_label(form.plainPassword.second, 'Repeat new password', { 'label_attr': {'class': ''}}) }}
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control border-b outline-none py-2 px-1 text-lg focus:border-b-2 focus:border-blue-500'}}) }}

			{% if form_errors(form.plainPassword.second) is not same as('') %}
				<div class="alert alert-danger mx-1">{{ form_errors(form.plainPassword.first) }}</div>
			{% endif %}
		</div>

		<div class="flex justify-end w-full">
			<button class="btn hover:btn my-3" type="submit">
				Update informations
			</button>
		</div>
		{{ form_end(form) }}
	</div>
</div></div>
